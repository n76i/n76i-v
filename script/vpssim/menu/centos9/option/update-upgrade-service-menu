#!/bin/bash

prompt="Vui long chon/ Please choose (0-Thoat):" 
options=( "Update N76I-VPSSIM" "Update system" )
printf "=========================================================================\n"
printf "                VPSSIM - Quan Ly VPS/Server by N76I.com \n"
printf "=========================================================================\n"
printf "                        Update / Upgrade Service \n"
printf "=========================================================================\n"


PS3="$prompt"
select opt in "${options[@]}" ; do 
 
    case "$REPLY" in

	1) clear && /etc/vpssim/menu/nang-cap-scripts;;
    2) clear && /etc/vpssim/menu/centos9/option/update-system;;
	0) clear && vpssim;;
	*) echo "Ban nhap sai, vui long nhap theo so thu tu tren menu !";continue;;

    esac

done

#
exit
